<%= form_for(@form_path) do |f| %>
  <% if @mobility_accommodation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mobility_accommodation.errors.count, "error") %> prohibited this mobility accommodation from being saved:</h2>

      <ul>
      <% @mobility_accommodation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :comparison_value, 'Mobility Impairment' %>
    <%= f.text_field :mobility_impairment %>
  </div>

  <div class="buttons-holder">
    <%= link_to :back, :class => "button button-cancel" do %>
      <span>Cancel</span>
    <% end %>
    <%= f.submit :class => "button" %>
  </div>
<% end %>

<%= content_for :head do %>
  <script type="text/javascript">
    var mobility_autocomplete_data = JSON.parse('<%= escape_javascript(mobility_autocomplete_values.to_json.html_safe) %>');

    function setup_autocomplete_fields() {
      $("input#mobility_accommodation_mobility_impairment").autocomplete({ source: mobility_autocomplete_data });
    }

    $(document).ready(function(){
      setup_autocomplete_fields();
    });
  </script>
<% end %>
