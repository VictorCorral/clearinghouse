<%= form_for([@trip_ticket, @trip_claim]) do |f| %>
  <% if @trip_claim.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip_claim.errors.count, "error") %> prohibited this trip_claim from being saved:</h2>

      <ul>
      <% @trip_claim.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :claimant_provider_id, "Provider" %>:
    <% if current_user.has_admin_role? %>
      <br /><%= f.collection_select :claimant_provider_id, Provider.where('id <> ?', @trip_ticket.originator.id), :id, :name, :include_blank => true %>
    <% else %>
      <%= @trip_claim.claimant.name %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :status %>: <%= @trip_claim.status.blank? ? "" : TripClaim::STATUS.invert[@trip_claim.status].to_s.humanize.titlecase %>
  </div>
  <div class="field">
    <%= f.label :proposed_pickup_time %>
    <% if can?(:create, @trip_claim) || can?(:edit, @trip_claim) %>
      <br /><%= f.datetime_select(:proposed_pickup_time, 
                                  :order => [:month, :day, :year, :hour, :minute],
                                  :default => DateTime.current,
                                  :ampm => true
      ) %>
    <% else %>
      <%= @trip_claim.proposed_pickup_time %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :proposed_fare %>:
    <% if can?(:create, @trip_claim) || can?(:edit, @trip_claim) %>
      <br /><%= f.text_field :proposed_fare, :placeholder => "$1.23" %>
    <% else %>
      <%= @trip_claim.proposed_fare %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :notes %>:<br />
    <% if can?(:create, @trip_claim) || can?(:edit, @trip_claim) %>
      <%= f.text_area :notes %>
    <% else %>
      <%= @trip_claim.notes %>
    <% end %>
  </div>

  <% if can? :edit, @trip_claim %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
