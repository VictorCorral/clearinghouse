<div id="trip-ticket-show">
  <h2>Trip Ticket</h2>

  <p id="notice"><%= notice %></p>

  <%= render 'form' %>
  
  <br />
  
  <%= link_to 'Back', trip_tickets_path %>
  
  <hr />
  <div id="trip_claims">
    <%= render 'trip_claims', :trip_claims => @trip_ticket.trip_claims.accessible_by(current_ability), :provider_admin => can?(:update, @trip_ticket) %>

    <% if can?(:create, @trip_ticket.trip_claims.build) && @trip_ticket.claimable_by?(current_user) %>
      <%= link_to "Submit Claim", new_trip_ticket_trip_claim_path(@trip_ticket) %><br />
    <% end %>    
  </div>

  <hr />
  <div id="audit_trail">
    <%= render 'shared/audit_trail', :record => @trip_ticket %>
  </div>
</div>