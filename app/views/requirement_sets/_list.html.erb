<h3><%= @provider.name %> Eligibility Requirements</h3>
<% if @provider.requirement_sets.any? %>
  <% @provider.requirement_sets.each_with_index do |rs, i| %>
    <section class="service_detail" style="margin-left: 1em">
      <%= '<h4 style="margin-bottom:0.5em">OR</h4>'.html_safe if i > 0 %>
      <h4 style="margin-bottom:0.5em"><%= RequirementSet::BOOLEAN_TYPES.key(rs.boolean_type) %></h4>
      <%= link_to 'Edit Requirements Group', edit_requirement_set_path(rs) %>
      <div style="margin-left:1em; margin-top:1em">
        <% @eligibility_requirements = rs.eligibility_requirements %>
        <%= render 'eligibility_requirements/list' %>
      </div>
    </section>
  <% end %>
<% else %>
  <p>No eligibility requirements defined.</p>
<% end %>
<% if can? :create, RequirementSet %>
  <%= link_to 'Create New Eligibility Requirement Group', new_provider_requirement_set_path(@provider) %><br/>
<% end %>
