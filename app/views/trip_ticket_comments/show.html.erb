<div id="trip-ticket-comment-show">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Trip ticket:</b>
    <%= @trip_ticket.to_param %>
  </p>

  <p>
    <b>User:</b>
    <%= @trip_ticket_comment.user.display_name %>
  </p>

  <p>
    <b>Body:</b><br>
    <%= @trip_ticket_comment.body %>
  </p>


  <% if can?(:edit, @trip_ticket_comment) %><%= link_to 'Edit', edit_trip_ticket_trip_ticket_comment_path(@trip_ticket, @trip_ticket_comment) %><br><% end %>
  <%= link_to 'Comments', trip_ticket_trip_ticket_comments_path(@trip_ticket) %><br>
  <%= link_to 'Trip Ticket Details', trip_ticket_path(@trip_ticket) %>

  <hr />
  <div id="audit_trail">
    <%= render 'shared/audit_trail', :record => @trip_ticket_comment %>
  </div>
</div>