<%= form_for([@trip_ticket, @trip_ticket_comment]) do |f| %>

  <%= render partial: 'shared/error_explanation', locals: { object: @trip_ticket_comment } %>

  <div class="field">
    <%= f.label :user_id %>
    <%= @trip_ticket_comment.user.display_name %>
  </div>
  <div class="field">
    <%= f.label :trip_ticket_id %>
    <%= @trip_ticket.to_param %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div class="buttons-holder field-align">
    <%= link_to :back, :class => "button button-cancel" do %>
      <span>Cancel</span>
    <% end %>
    <%= f.submit :class => "button" %>
  </div>
<% end %>
