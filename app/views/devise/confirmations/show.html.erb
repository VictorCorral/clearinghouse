<div class="padded">
  <header>
    <h2>Account Activation for <%= resource.name.present? ? resource.name : resource.email %></h2>
  </header>
  
  <section class="form-holder">
    <%= form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'patch'}, :id => 'activation-form' do |f| %>
      <%= devise_error_messages! %>
      
      <% if @requires_password %>
        <div class="field">
          <%= f.label :password,'Choose a Password:' %>
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation,'Password Confirmation:' %>
          <%= f.password_field :password_confirmation %>
        </div>
      <% end %>

      <%= hidden_field_tag :confirmation_token,@confirmation_token %>

      <div class="buttons-holder">
        <%= f.submit "Activate", :class => "button" %>
      </div>
    <% end %>
  </section>
</div>

<%= render "devise/shared/links" %>
