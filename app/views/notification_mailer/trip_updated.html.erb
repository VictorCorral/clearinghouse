<table class="table table-condensed">
  <caption>Trip Ticket Summary</caption>
  <tbody>
    <tr>
      <th>Originator</th>
      <td><%= @trip_ticket.originator.name %></td>
    </tr>
    <tr>
      <th>Appointment Time</th>
      <td><%= @trip_ticket.appointment_time %></td>
    </tr>
    <tr>
      <th>Pickup</th>
      <td><%= @trip_ticket.requested_pickup_time %><%= " in #{@trip_ticket.pick_up_location.city}, #{@trip_ticket.pick_up_location.state}" if @trip_ticket.pick_up_location.present? %></td>
    </tr>
    <tr>
      <th>Drop-off</th>
      <td><%= @trip_ticket.requested_drop_off_time %><%= " in #{@trip_ticket.drop_off_location.city}, #{@trip_ticket.drop_off_location.state}" if @trip_ticket.drop_off_location.present? %></td>
    </tr>
    <tr>
      <th>Seats Required</th>
      <td><%= @trip_ticket.customer_seats_required %></td>
    </tr>
  </tbody>
</table>
<br>
<table class="table table-condensed">
  <caption>Change History</caption>
  <thead>
    <tr>
      <th width="30%">Attribute</th>
      <th width="35%">From</th>
      <th width="35%">To</th>
    </tr>
  </thead>
  <tbody>
    <% @trip_changes.each do |attribute, change| %>
      <% next if change[0].blank? && change[1].blank? %>
      <tr>
        <td><%= attribute.humanize %></td>
        <td><%= formatted_audit_attribute attribute, change[0] %></td>
        <td><%= formatted_audit_attribute attribute, change[1] %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
