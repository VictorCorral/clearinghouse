<div class="padded">
  <header>
    <h2>Users</h2>
  </header>

  <%= render 'list', :users => @users, :show_provider => true %>
</div>

<% content_for :sidebar do %>
  <ul class="side-nav">
    <% if can? :create, User.new(:provider_id => current_user.provider.try(:id)) %>
      <li><%= link_to 'New User', new_user_path %></li>
    <% end %>
  </ul>
<% end %>