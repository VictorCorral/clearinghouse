<div class="padded">
  <header>
    <% if @user == current_user %>
    <h2>Edit Profile</h2>
    <% else %>
    <h2>Editing <%= @user.display_name %></h2>
    <% end %>
  </header>

  <section class="form-holder">
    <%= render 'form' %>
  </section>
</div>

<% content_for :sidebar do %>
  <ul class="side-nav">
    <% if current_user.has_any_role?([:site_admin, :provider_admin]) %>
      <li><%= link_to 'All Users', users_path %></li>
      <li><%= link_to 'View User', @user %></li>
    <% end %>
  </ul>
<% end %>
